<configuration>
  <!-- Main application logs -->
  <include resource="org/springframework/boot/logging/logback/base.xml"/>

  <!-- Separate logger for invalid payouts -->
  <appender name="INVALID_PAYOUTS" class="ch.qos.logback.core.FileAppender">
    <file>logs/invalid_payouts.log</file>
    <append>true</append>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="InvalidPayoutLogger" level="INFO" additivity="false">
    <appender-ref ref="INVALID_PAYOUTS"/>
  </logger>
</configuration>
